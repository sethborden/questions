extends ./layout.jade

block content
    div.col-md-4.col-md-offset-4
        div.panel.panel-primary
            div.panel-heading
                div.panel-title.
                    Question
            div.panel-body
                form.form-horizontal.col-md-10.col-md-offset-1(method='POST', action='/questions/' + id)
                    div.form-group
                        h2.text-center.
                            #{question}
                    div.form-group
                        label(for='answer') Answer:
                        input.form-control(type='text', name='answer', autofocus, autocomplete="off")
                    div.form-group.text-center
                        input.btn.btn-primary(type='submit', value='Answer Question')
                hr.form-divider
                ul.tag-list
                    each tag in Tags
                        li.tag-list-group-item
                            span.
                                #{tag.get('name')}
                            form.delete(method='POST', action='/questions/' + id + '/tag/' + tag.get('id') + '?_method=DELETE')

