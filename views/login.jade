extends ./layout.jade

block content
    div.col-md-4.col-md-offset-4
        div.panel.panel-success
            div.panel-heading
                div.panel-title
                    span.
                        Login
            div.panel-body
                form.form-horizontal.col-md-10.col-md-offset-1(method='POST', action='/login', name='login-form')
                    div.form-group
                        label(for='username') Username:
                        input.form-control(type='text', name='username', placeholder='Enter username here', autofocus)
                    div.form-group
                        label(for='password') Password:
                        input.form-control(type='password', name='password', placeholder='password')
                    div.form-group
                        input.btn.btn-success(type='submit', value='Login')
                    div.form-group
                        a(href="/signup") Signup
